{
  "name": "@kiroboio/safe-transfer-lib",
  "version": "2.5.0",
  "description": "Safe Transfer library",
  "author": "Dmitry Melnikov <d.dash.mv@gmail.com>",
  "license": "MIT",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "rm -rf dist && tsc && rm -rf dist/tests && mv dist/src/* dist && rm -rf dist/src",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run test && npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "test": "jest --coverage --unhandled-rejections=none --testTimeout=10000",
    "test:watch": "jest --coverage --watchAll --unhandled-rejections=none --testTimeout=10000",
    "test:watch:clean": "jest --watchAll --unhandled-rejections=none --testTimeout=10000",
    "test:push": "CI=true jest --unhandled-rejections=none --testTimeout=10000",
    "dev:production": "export NODE_ENV=production && ts-node-dev ./tests/client.ts",
    "dev": "ts-node-dev ./tests/client.ts",
    "lint": "eslint --cache --ext .js,.jsx,.ts,.tsx src"
  },
  "files": [
    "/dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/kiroboio/ki-safe-transfer-lib"
  },
  "devDependencies": {
    "@types/jest": "^25.2.1",
    "@types/node": "^13.13.5",
    "@types/ramda": "^0.27.4",
    "@types/uuid": "^7.0.3",
    "@typescript-eslint/eslint-plugin": "^2.32.0",
    "@typescript-eslint/parser": "^2.32.0",
    "dotenv": "^8.2.0",
    "eslint": "7.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-async-await": "0.0.0",
    "eslint-plugin-eslint-comments": "^3.1.2",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.10.0",
    "eslint-plugin-json": "^2.1.1",
    "eslint-plugin-markdown": "^1.0.2",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react-hooks": "4.0.0",
    "husky": "^4.2.5",
    "jest": "^25.5.4",
    "prettier": "^1.19.1",
    "ts-jest": "^25.5.1",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "@feathersjs/authentication-client": "4.5.4",
    "@feathersjs/feathers": "4.5.3",
    "@feathersjs/socketio-client": "4.5.4",
    "multicoin-address-validator": "0.4.4",
    "ramda": "0.27.0",
    "socket.io-client": "2.3.0",
    "uuid": "8.0.0"
  }
}
