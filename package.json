{
  "name": "@kiroboio/safe-transfer-lib",
  "version": "1.0.1",
  "description": "Safe Transfer library",
  "author": "Dmitry Melnikov <d.dash.mv@gmail.com>",
  "license": "MIT",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "rm -rf dist && tsc && rm -rf dist/tests && mv dist/src/* dist && rm -rf dist/src",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run test && npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watchAll --unhandled-rejections=strict",
    "test:push": "jest --unhandled-rejections=strict",
    "dev:production": "export NODE_ENV=production && ts-node-dev ./tests/client.ts",
    "dev": "ts-node-dev ./tests/client.ts",
    "lint": "eslint --cache --ext .js,.jsx,.ts,.tsx src"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run test:push"
    }
  },
  "files": [
    "/dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/kiroboio/ki-safe-transfer-lib"
  },
  "devDependencies": {
    "@types/jest": "^25.1.1",
    "@types/node": "^13.7.0",
    "@typescript-eslint/eslint-plugin": "^2.19.2",
    "@typescript-eslint/parser": "^2.19.2",
    "eslint": "^6.8.0",
    "eslint-plugin-async-await": "0.0.0",
    "eslint-plugin-eslint-comments": "^3.1.2",
    "eslint-plugin-jest": "^23.6.0",
    "eslint-plugin-json": "^2.0.1",
    "eslint-plugin-markdown": "^1.0.1",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react-hooks": "^2.3.0",
    "husky": "^4.2.1",
    "jest": "^25.1.0",
    "ts-jest": "^25.2.0",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.7.5"
  },
  "dependencies": {
    "@feathersjs/feathers": "^4.5.1",
    "@feathersjs/socketio-client": "^4.5.1",
    "multicoin-address-validator": "^0.4.1",
    "socket.io-client": "^2.3.0"
  }
}
