{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "maxNodeModuleJsDepth": 15,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "lib": ["es2017", "es7", "es6", "dom"],
    "noImplicitAny": true,
    "declaration": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "sourceMap": true,
    "rootDir": "./"
  },
  "typedocOptions": {
    "mode": "modules",
    "out": "docs"
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["node_modules", "dist", "client.ts"]
}
